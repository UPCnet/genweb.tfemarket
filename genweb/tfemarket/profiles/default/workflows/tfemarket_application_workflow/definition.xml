  <description>El professor rebutja la sol·licitud</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=reject" category="workflow" icon="">Rebutja</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Market Manager</guard-role>
