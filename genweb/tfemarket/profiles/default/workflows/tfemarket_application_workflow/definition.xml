 <transition transition_id="accept" title="accept" new_state="accepted" trigger="USER" before_script="" after_script="">
  <description>El professor accepta la sol·licitud</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=accept" category="workflow" icon="">Accepta</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Market Manager</guard-role>
   <guard-role>Teacher</guard-role>
  </guard>
 </transition>
 <transition transition_id="cancel" title="cancel" new_state="cancelled" trigger="USER" before_script="" after_script="">
  <description>L'estudiant retira la sol·licitud a un TFE</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=cancel" category="workflow" icon="">Cancel·la</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Market Manager</guard-role>
   <guard-role>Student</guard-role>
  </guard>
 </transition>
 <transition transition_id="confirm" title="confirm" new_state="confirmed" trigger="USER" before_script="" after_script="">
  <description>L'estudiant confirma el TFE que li ha assignat el professor.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=confirm" category="workflow" icon="">Confirma</action>
  <guard>
   <guard-role>Site Administrator</guard-role>
   <guard-role>Manager</guard-role>
   <guard-role>Market Manager</guard-role>
   <guard-role>Student</guard-role>
  </guard>
 </transition>
